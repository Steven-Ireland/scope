{
  "name": "scope",
  "version": "0.1.13",
  "private": true,
  "description": "Minimalist Elasticsearch explorer",
  "repository": {
    "type": "git",
    "url": "https://github.com/Steven-Ireland/scope.git"
  },
  "author": "Steven ireland <contact@stevenire.land>",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\"",
    "server": "node electron/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed": "tsx scripts/seed.ts",
    "clear": "tsx scripts/clear.ts",
    "release": "tsx scripts/release.ts",
    "electron-dev": "concurrently \"vite\" \"electron .\"",
    "electron-build": "npm run build && electron-builder --win --linux"
  },
  "build": {
    "appId": "com.scope.app",
    "productName": "Scope",
    "directories": {
      "output": "dist-electron"
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "nsis": {
      "differentialPackage": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Steven-Ireland",
        "repo": "scope",
        "releaseType": "release"
      }
    ],
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@elastic/elasticsearch-7": "npm:@elastic/elasticsearch@7.13.0",
    "@elastic/elasticsearch-8": "npm:@elastic/elasticsearch@^8.19.1",
    "@elastic/elasticsearch-9": "npm:@elastic/elasticsearch@^9.2.1",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "electron-serve": "^1.1.0",
    "express": "^4.21.2",
    "lucide-react": "^0.563.0",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "react-router-dom": "^7.1.3",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "undici": "^7.20.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/vite": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.7",
    "vitest": "^4.0.18"
  }
}
